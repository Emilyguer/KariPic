<div class="container mt-5">
  <div class="mx-auto"> <!-- Agregado para centrar el contenido -->

    <p class="text-success"><%= notice %></p>

    <div id="photos" class="row">
      <% @photos.each do |photo| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <%= image_tag photo.image.url, class: "card-img-top", alt: photo.title %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to photo.title, photo %></h5>
              <p class="card-text"><%= truncate(photo.description, length: 150) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-3">
      <%= link_to "New photo", new_photo_path, class: "btn btn-success" %>
    </div>

  </div> <!-- Cierre del div centrado -->
</div>
